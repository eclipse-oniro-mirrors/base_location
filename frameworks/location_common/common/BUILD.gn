  deps = [ "$LOCATION_ROOT_DIR/frameworks/base_module:lbsbase_module" ]

  external_deps = [
    "ability_runtime:ability_connect_callback_stub",
    "cJSON:cjson",
    "ability_runtime:app_manager",
